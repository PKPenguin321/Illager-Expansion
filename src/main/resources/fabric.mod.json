{
  "schemaVersion": 1,
  "id": "illagerexp",
  "version": "${version}",

  "name": "Illager_Expansion",
  "description": "A 1.18.2 Fabric Mod that focuses on expanding content surrounding the mysterious Illagers in Minecraft!",
  "authors": [
    "Dricky"
  ],
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/OhDricky/Illager-Expansion"
  },

  "license": "CC0-1.0",
  "icon": "assets/illagerexp/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "me.sandbox.IllagerExpansion"
    ],
    "client": [
      "me.sandbox.client.ClientRegistry"
    ],
    "mm:early_risers": [
      "me.sandbox.EarlyRiser"
    ]
  },
  "mixins": [
    "illagerexp.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.13.3",
    "fabric": "*",
    "minecraft": "1.18.x",
    "java": ">=17",
    "mm": ">=2.3"
  },
  "suggests": {
    "another-mod": "*"
  },
  "accessWidener" : "illagerexp.accesswidener"
}